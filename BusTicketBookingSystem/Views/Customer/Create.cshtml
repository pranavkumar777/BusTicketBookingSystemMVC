@model Model.CustomerModel

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/StyleSheet1.css" rel="stylesheet" />

  <style>
   

    .jumbotron {
       background-color: #6495ed94;
    }
    .text1{
        color:orange;
    }
  .test{
      color:blue;
  }


</style>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <br /><br />

    <div class="jumbotron">
        <div class="form-horizontal">
            <section id="signUpForm">
                <h4>Sign Up details</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("CustomerName", "Name", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:50px " } })
                        @Html.ValidationMessageFor(model => model.CustomerName, "Enter Name", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("CustomerEmail", "Email", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CustomerEmail, new { htmlAttributes = new {  } })
                        @Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("CustomerMobileNumber", "MobileNumber", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CustomerMobileNumber, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:50px; width: 250px" } })
                        @Html.ValidationMessageFor(model => model.CustomerMobileNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("CustomerPassword", "Password", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.CustomerPassword, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:590px; width:250px" } })
                        @Html.ValidationMessageFor(model => model.CustomerPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("CustomerConfirmPassword", "Confirm Password", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.CustomerConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Register" class="btn btn-default"  style="width:106px ; font-size:20px ; font-weight : bold ; color:black " />
                         <text class="text1">Already a user? @Html.ActionLink("Click here to login", "Login",null, new {  @class = "test" }) </text>
                    </div>
                </div>
            </section>
           
        </div>
    </div>
}

